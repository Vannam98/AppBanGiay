<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:background="@color/color_backroud"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/text_size"
            android:textColor="@color/txt_black"
            android:text="@string/name_page">

        </TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">
        //listview san pham

        <ListView
            android:id="@+id/listview_manghinh_thanhtoan"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:background="@color/color_thongtin_khach_hang"
            android:orientation="vertical">
            //tenkhachhang
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txttenkhachhang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_black"
                    android:layout_margin="@dimen/padding_Left_10dp"
                    android:text="@string/txt_tenkhachhang_thanhtoan">
                </TextView>
                <EditText
                    android:id="@+id/edt_tenkhachhang_thanhtoan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/vienedittext"
                   android:layout_margin="@dimen/padding_Left_10dp">
                </EditText>
            </LinearLayout>

            //sodienthoai

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtsodienthoai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_sodienthoai_thanhtoan"
                    android:textColor="@color/txt_black"
                    android:layout_margin="@dimen/padding_Left_10dp"
                    >
                </TextView>

                <EditText
                    android:id="@+id/edt_sodienthoai_thanhtoan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/vienedittext"
                    android:layout_margin="@dimen/padding_Left_10dp"></EditText>
            </LinearLayout>
            //diachigiao

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtdiachigiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_diachigiao_thanhtoan"
                    android:textColorHint="@color/txt_black"
                    android:layout_margin="@dimen/padding_Left_10dp">
                </TextView>
                <EditText
                    android:id="@+id/edt_diachigiao_thanhtoan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/vienedittext"
                    android:layout_margin="@dimen/padding_Left_10dp">

                </EditText>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/color_thongtin_khach_hang"
            android:orientation="vertical">
            //button chinh sua

            //tongtien

            <Button
                android:id="@+id/btnchinhsua"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/buttonlist"
                android:layout_gravity="right"
                android:layout_margin="@dimen/layout_margin"
                android:background="@drawable/vienbutton"
                android:text="@string/txt_chinhsua_thanhtoan"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_tongtien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/layout_margin_thongtin"
                    android:text="@string/txt_tongtien_thanhtoan"
                    android:textColor="@color/txt_black"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_tongtien_thanhtoan2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="@dimen/layout_margin_thongtin"
                    android:background="@drawable/vienedittext"
                    android:textColor="@color/txt_black"></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:background="@color/color_backroud"
        android:orientation="horizontal">
        //buton dang hang

        <Button
            android:id="@+id/btn_dathang_thanhtoan"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button"
            android:layout_margin="@dimen/layout_margin"
            android:background="@drawable/vienbutton"
            android:text="@string/btn_dathan"
            android:textColor="@color/white" />
        //button huy
        <Button
            android:id="@+id/btn_huy_thanhtoan"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button"
            android:layout_margin="@dimen/layout_margin"
            android:background="@drawable/vienbutton"
            android:text="@string/btn_huy"
            android:textColor="@color/white" />


    </LinearLayout>


</LinearLayout>