<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@color/color_backroud"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/txt_danhsachnguoigiao_danhsachnguoigiao"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/text_size" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

        <ListView
            android:id="@+id/lv_Dsnguoigiao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/color_backroud"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_xacnhan_dsnguoigiao"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button"
            android:layout_margin="@dimen/layout_margin"
            android:background="@drawable/vienbutton"
            android:text="@string/btn_xacnhan_danhsachnguoigiao"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_thoat_dsnguoigiao"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button"
            android:layout_margin="@dimen/layout_margin"
            android:background="@drawable/vienbutton"
            android:text="@string/btn_thoat_danhsachnguoigiao"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>