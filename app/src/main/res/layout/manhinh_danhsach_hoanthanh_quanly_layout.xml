<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@color/color_backroud"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/txt_danhsachdonhanghoanthanh_dsdonhanghoanthanhqly"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/text_size" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_backroud"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <SearchView
                android:id="@+id/sv_dshoanthanhqly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin"
                android:background="@drawable/vien" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/txtdate_dshoanthanhqly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="26/10/2019"
                android:textColor="#FF0000" />

            <ImageView
                android:id="@+id/btndate_dshoanthanhqly"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_date_range_black_24dp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

        <ListView
            android:id="@+id/lsv_dshoanthanhqly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/color_backroud">

        <Button
            android:id="@+id/btn_thoat_dshoanthanhqly"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button"
            android:layout_margin="@dimen/layout_margin"
            android:background="@drawable/vienbutton"
            android:text="@string/btn_Thoat_dsdonhanghoanthanhqly"
            android:textColor="@color/txt_black" />

        <Button
            android:id="@+id/btn_trolai_dshoanthanhqly"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button"
            android:layout_margin="@dimen/layout_margin"
            android:background="@drawable/vienbutton"
            android:text="@string/btn_trolai_dsdonhanghoanthanhqly"
            android:textColor="@color/txt_black" />

    </LinearLayout>

</LinearLayout>